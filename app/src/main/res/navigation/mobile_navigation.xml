<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home_dest">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.covid_19status.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/home_dest"
        android:name="com.example.covid_19status.HomeFragment"
        android:label="@string/home_toolbar"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/countries_dest"
        android:name="com.example.covid_19status.CountriesFragment"
        android:label="@string/countries"
        tools:layout="@layout/fragment_countries">
        <action
            android:id="@+id/country_to_country_detail_dest"
            app:destination="@id/countryDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/countryDetailFragment"
        android:name="com.example.covid_19status.CountryDetailFragment"
        android:label="fragment_country_detail"
        tools:layout="@layout/fragment_country_detail" />

</navigation>